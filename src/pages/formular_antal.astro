---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<MainLayout
  title="Formular - Angiv antal flasker"
  ogtitle="Angiv antal flasker - Vinens Essens"
  description="Antal-siden til Vinens Essens"
  ogdescription="Antal-siden til virksomheden Vinens Essens"
>
  <section class="max-w-7xl mx-auto md:p-0 p-8">
    <section class="md:pt-desktop-top pt-mobil-top md:pb-desktop-bottom pb-mobil-bottom">
      <section class="grid md:grid-cols-12 gap-gap">
        <section class="bg-neutral-900 col-span-8 md:col-start-3">
          <section class="grid grid-cols-6">
            <span class="bg-red-800 h-3"></span>
            <span class="bg-red-800 h-3"></span>
            <span class="bg-neutral-50 h-3"></span>
            <span class="bg-neutral-50 h-3"></span>
            <span class="bg-neutral-50 h-3"></span>
            <span class="bg-neutral-50 h-3"></span>
          </section>
          <section class="md:p-12 p-8">
            <section>
              <p class="pb-3">Månedligt abonnement</p>
              <h1 class="md:text-h3-desktop text-h3-mobile font-display font-bold pb-10">
                <a class="pr-3 inline align-top" href="/formular_vinkasse"><img class="h-6 inline" src="/tilbage.svg" alt="Tilbageknap" /></a> Vælg antal
                flasker
              </h1>
            </section>

            <section class="grid md:grid-cols-2 gap-gap">
              <section class="col-span-1 flex flex-col items-center justify-end">
                <div class="pb-5">
                  <img class="md:h-80 h-40" src="/3_flasker.svg" alt="3 flasker" />
                </div>
                <a class="pt-5" href="/formular_oplysninger">
                  <Button variant="primary" size="small">3 flasker</Button>
                </a>
              </section>

              <section class="col-span-1 flex flex-col items-center justify-end">
                <div class="md:pt-0 pt-16 pb-5">
                  <img class="md:h-80 h-40" src="/6_flasker.svg" alt="6 flasker" />
                </div>
                <a class="pt-5" href="/formular_oplysninger">
                  <Button variant="primary" size="small">6 flasker</Button>
                </a>
              </section>
            </section>
          </section>
        </section>
      </section>
      <section class="pt-10 flex justify-center">
        <hr class="border-t-2 border-red-800 w-28" />
      </section>
    </section>
  </section>
</MainLayout>
