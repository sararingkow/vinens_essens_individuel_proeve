---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
---

<MainLayout
  title="Formular - Verificering af alder med MitID"
  ogtitle="Verificering af alder med MitID - Vinens Essens"
  description="Verifikation af alder med MitID"
  ogdescription="Verifikation af alder med MitID til virksomheden Vinens Essens"
>
  <section class="max-w-7xl mx-auto md:p-0 p-8">
    <section class="md:pt-desktop-top pt-mobil-top md:pb-desktop-bottom pb-mobil-bottom">
      <section class="grid md:grid-cols-12 gap-4">
        <section class="bg-neutral-900 col-span-8 md:col-start-3">
          <section class="grid grid-cols-6">
            <span class="bg-red-800 h-3"></span>
            <span class="bg-red-800 h-3"></span>
            <span class="bg-red-800 h-3"></span>
            <span class="bg-red-800 h-3"></span>
            <span class="bg-red-800 h-3"></span>
            <span class="bg-neutral-50 h-3"></span>
          </section>
          <section class="md:p-12 p-8">
            <h1 class="md:text-h3-desktop text-h3-mobile font-display font-bold pb-10">
              <a class="pr-3 inline align-top" href="/formular_levering"><img class="h-6 inline" src="/tilbage.svg" alt="Tilbageknap" /></a>Bekræft
              din alder
            </h1>
            <section class="col-span-6 col-start-2">
              <section class="bg-neutral-50 md:grid md:grid-cols-6 gap-4">
                <div class="col-span-2 bg-[#275EDD] content-center">
                  <img class="w-full h-auto" src="/mitid.webp" alt="MitID logo" />
                </div>
                <div class="col-span-4 p-8 content-center">
                  <p class="text-neutral-950 font-bold">Køb af alkohol i Danmark kræver verificering af alder</p>
                  <p class="text-neutral-950 font-regular">For at sikre ansvarligt køb af alkohol er vi nødt til at verificere din alder via MitID</p>
                </div>
              </section>
            </section>
            <div class="flex justify-center pt-10">
              <a href="/formular_betaling">
                <Button variant="primary" size="small">Verficér alder med MitID</Button>
              </a>
            </div>
          </section>
        </section>
      </section>
      <section class="pt-10 flex justify-center">
        <hr class="border-t-2 border-red-800 w-28" />
      </section>
    </section>
  </section>
</MainLayout>
